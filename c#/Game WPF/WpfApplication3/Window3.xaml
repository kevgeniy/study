<Window x:Class="WpfApplication3.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window3" Height="600" Width="1000" Background="MidnightBlue"
        SizeChanged="Window_SizeChanged">
    <Grid x:Name="ExternField" Grid.Column="0" Background="Beige" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid x:Name="Field" Margin="10" Background="DarkGray">
            <Canvas x:Name="InsideField" HorizontalAlignment="Center" VerticalAlignment="Center" Background="DarkBlue">
            </Canvas>
        </Grid>
        
        <Button x:Name="GoB" VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Column="1" Margin="10" FontSize="20" Click="GoB_Click">
            Go
        </Button>
    </Grid>
</Window>
